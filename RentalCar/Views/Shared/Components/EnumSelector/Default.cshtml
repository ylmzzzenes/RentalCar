@model dynamic

<style>
    .option-pill {
        border: 1px solid #ccc;
        border-radius: 25px;
        padding: 6px 14px;
        font-size: 0.95rem;
        background-color: #f8f9fa;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        cursor: pointer;
        user-select: none;
        transition: all 0.2s;
    }

        .option-pill:hover {
            background-color: #e2e6ea;
        }

    .option-group {
        margin-bottom: 2rem;
    }

        .option-group h6 {
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

    .pill-container {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .option-pill input[type="checkbox"] {
        accent-color: #0d6efd;
    }
</style>


<div class="option-group">
    <h6>Yakıt Türü</h6>
    <div class="pill-container">
        @foreach (var item in Model.FuelType)
        {
            <label class="option-pill">
                <input type="checkbox" name="SelectedFuelType" value="@((int)item)" />
                @item
            </label>
        }
    </div>
</div>


