@using RentalCar.Data.Enums
@model RentalCar.Data.Models.Requests.CreateCar

@{
    ViewData["Title"] = "Araç Ekle";
}

<div class="container px-5">
   
    <div class="card shadow-lg border-0 bg-light p-5 rounded-4">
       
        <h2 class="mb-4 text-center fw-bold text-dark">🚘 Yeni Araç Ekle</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="row g-4">
               
                <div class="col-md-6">
                    <label asp-for="Vin" class="form-label fw-semibold">Şasi Numarası</label>
                    <input asp-for="Vin" class="form-control form-control-sm shadow-sm" />
                    <span asp-validation-for="Vin" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Brand" class="form-label fw-semibold">Marka</label>
                    <input asp-for="Brand" class="form-control form-control-sm shadow-sm" />
                    <span asp-validation-for="Brand" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Model" class="form-label fw-semibold">Model</label>
                    <input asp-for="Model" class="form-control form-control-sm shadow-sm" />
                    <span asp-validation-for="Model" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Year" class="form-label fw-semibold">Yıl</label>
                    <input asp-for="Year" class="form-control form-control-sm shadow-sm" type="date" />
                    <span asp-validation-for="Year" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Colour" class="form-label fw-semibold">Renk</label>
                    <input asp-for="Colour" class="form-control form-control-sm shadow-sm" />
                    <span asp-validation-for="Colour" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Plate" class="form-label fw-semibold">Plaka</label>
                    <input asp-for="Plate" class="form-control form-control-sm shadow-sm" />
                    <span asp-validation-for="Plate" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    <label asp-for="ImageUrls" class="form-label fw-semibold">Araç Görseli</label>
                    <input asp-for="ImageUrls" class="form-control form-control-sm shadow-sm" type="file" multiple />
                    <span asp-validation-for="ImageUrls" class="text-danger small"></span>
                </div>

                <div class="col-md-12">
                    @await Component.InvokeAsync("EnumSelector")
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-warning btn-sm px-4 shadow-sm">Kaydet</button>
            </div>
        </form>
    </div>
</div>
