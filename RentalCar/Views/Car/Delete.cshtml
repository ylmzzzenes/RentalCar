@using Microsoft.AspNetCore.Identity
@using RentalCar.Data.Models
@model RentalCar.Data.Models.Car
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Araç Sil";
}



<h3>Silmek istediğinizden emin misiniz?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Marka</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Plaka</dt>
        <dd class="col-sm-10">@Model.Plate</dd>
    </dl>

    <form asp-action="DeleteConfirm" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
    </div>
}

