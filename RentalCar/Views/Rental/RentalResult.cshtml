@model RentalCar.Data.Models.Rental
@using RentalCar.Data.Enums

@{
    ViewData["Title"] = "Kiralama Sonucu";
}

<div class="card shadow-sm border-0 p-4">
    <h2 class="mb-4">Kiralama Sonucu</h2>

    <div class="row g-4">
        <div class="col-md-6">
            <h4>@Model.Car.Brand @Model.Car.model</h4>
            <p><strong>Plaka:</strong> @Model.Car.Plate</p>
            <p><strong>Yıl:</strong> @Model.Car.yil</p>
            <p><strong>Yakıt Türü:</strong> @Model.Car.yakitTuru</p>
            <p><strong>Vites:</strong> @Model.Car.vites</p>
            <p><strong>Kasa Tipi:</strong> @Model.Car.BodyType</p>
            <p><strong>Renk:</strong> @Model.Car.renk</p>

            <p><strong>Kiralama Tipi:</strong> @Model.RentalType</p>
            <p><strong>Süre:</strong> @Model.Duration</p>
            <p><strong>Toplam Ücret:</strong> <span class="text-success fw-bold">@Model.TotalPrice ₺</span></p>

            <div class="mt-3">
                <a asp-controller="Car" asp-action="List" class="btn btn-outline-secondary">← Araba Listesine Dön</a>
            </div>
        </div>

        <div class="col-md-6 text-center">
            @if (!string.IsNullOrWhiteSpace(Model.Car.ImageUrls))
            {
                foreach (var img in Model.Car.ImageUrls.Split(','))
                {
                    <img src="~/Images/Upload/@img"
                         class="img-thumbnail m-2"
                         style="max-height: 200px; object-fit: cover;" />
                }
            }
            else
            {
                <p>Bu araca ait görsel bulunmamaktadır.</p>
            }
        </div>
    </div>
</div>
